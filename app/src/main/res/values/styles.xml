<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GPACalculatorButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/light_purple</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GPACalculatorDarkButton" parent="GPACalculatorButton">
        <item name="android:background">@color/mid_purple</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>
    
    <style name="GPACalculatorEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_border</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="GPACalculatorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
    </style>
</resources>