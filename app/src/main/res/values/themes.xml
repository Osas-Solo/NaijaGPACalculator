<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NaijaGPACalculator" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/mid_purple</item>
        <item name="colorOnPrimary">@color/grey</item>

        <item name="buttonStyle">@style/GPACalculatorButton</item>
        <item name="editTextStyle">@style/GPACalculatorEditText</item>
        <item name="spinnerStyle">@style/GPACalculatorSpinner</item>
        <item name="android:textViewStyle">@style/GPACalculatorTextView</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>